#include <iostream>
using namespace std;

int main()
{ 
    char letter_temp;
    int temp;
    cout << " Enter Temperature: ";
    cin>> temp;

    if ( temp >=41 and temp <= 54)
    {
        cout << "Stay hydrated!";

    }
    else if ( temp >= 32 and temp <= 40 )
    {
        cout <<  "Stay Cool and safe!";
    }
    else if ( temp >= 26 and temp <= 31)
        {
            cout <<  "Keep a sunblock handy!";

        }
    else if ( temp >= 20 and temp <= 25 )
    {
        cout <<  "Alway keep your cool!";
    
    }
    else if ( temp < 20 )
    {
        cout <<  "Cool breeze in the air!";
    
    }
    else 
    {
    cout<< " Wrong input number";
    }
    return 0;
   
}
